<footer>
    <div class="right-col-footer">
        <p>
            Click To Listen
        </p>
        <img src="/media/play.png" id="icon">
    </div>
    <div class="left-col-footer float-md-start">
    Copyright &copy; Rick & Morty Pezevenkleri LTD ŞTİ 2021
    </div>
    <audio id="mySong">
        <source src="/media/rickmorty.mp3" type="audio/mp3">
    </audio>
    <script>
        var mySong = document.getElementById("mySong");
        var icon = document.getElementById("icon");
        icon.onclick = function(){
            if(mySong.paused){
                mySong.play();
                icon.src ="/media/pause.png";
            }else{
                mySong.pause();
                icon.src ="/media/play.png";
            }
        }
    </script>
</footer>